<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.veksco.questhousedesign">

    <!-- INTERNET permission may be added by Unity/library; keep only storage permission here to avoid duplicate declarations -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Do not set application label here to avoid collisions with generated launcher/unityLibrary resources -->
    <application>
        <!-- Ensure Unity activity is present for launcher -->
        <activity android:name="com.unity3d.player.UnityPlayerActivity"
                  android:label="QuestExporter"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
